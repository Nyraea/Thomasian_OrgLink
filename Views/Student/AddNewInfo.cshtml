@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;
@model IEnumerable<ThomasianOrglist.Models.Student>

@{
    ViewData["Title"] = "Account";

}


<div class="d-flex flex-column align-items-center justify-content-center" style="margin-top:150px">
    <div class="container">
        <div class="card mt-5 text-white" style="color:white;border-radius: 20px!important;">
            <div class="card-body bg-dark p-4" style="border-radius: 20px!important;padding:100px!important">

                <div class="d-flex flex-row align-items-start justify-content-center mb-4">
                    <b class="fs-5">BACKGROUND INFORMATION</b>
                </div>
                <div class="mb-3 ">
                    <label for="description" class="form-label fs-5 fw-bold">DESCRIPTION:</label>
                    <textarea class="form-control mb-5" id="description" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label for="education" class="form-label fs-5 fw-bold">EDUCATION:</label>
                    <textarea class="form-control  mb-5" id="education" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label for="skills" class="form-label fs-5 fw-bold">SKILLS:</label>
                    <textarea class="form-control  mb-5" id="skills" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label for="experience" class="form-label fs-5 fw-bold">EXPERIENCE:</label>
                    <textarea class="form-control" id="experience" rows="3"></textarea>
                </div>

                <div class="d-flex flex-row flex-wrap justify-content-center mt-5">
                    <div class="d-flex align-items-center justify-content-center p-2">
                        <button type="button" class="btn btn-danger mx-3 my-3" style="width:150px; height:50px;"><b> CANCEL </b> </button>
                    </div>
                    <div class="d-flex align-items-center justify-content-center p-2">
                        <button type="button" class="btn btn-warning mx-3 my-3" style="width:150px; height:50px;"><b> SAVE PROFILE </b> </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>