    <div class="row row-cols-1 row-cols-md-3 g-3 mx-4 my-3 mb-5 flex_card">
        @if (Model.Organizations != null)
        {
            @foreach (var organization in Model.Organizations)
            {
                <div class="col">
                    <a class="link-white-2" asp-area="" asp-controller="Department" asp-action="Details" asp-route-departmentId="@organization.DepartmentId" asp-route-orgId="@organization.org_id">
                        <div class="card flex_card my-2 h-100">
                            <img src="@Url.Content(organization.photo_path + organization.photo_filename)" class="card-img-top img-fluid" alt="..." style="object-fit: cover; height: 400px;">
                            <div class="card-body" style="width: 100%!important;">
                                <h5 class="card-title"><b>@organization.OrgName</b></h5>
                                <p class="card-text">@organization.Details</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
</div>