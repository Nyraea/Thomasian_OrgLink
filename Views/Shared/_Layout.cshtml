<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThomasianOrglist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black box-shadow justify-content-between fixed-top">
            <div class="container-fluid">

                @*NAV LOGO*@
                <div class="collapse d-none d-sm-block w-40">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/assets/Logo.png" class="mw-100" /></a>
                </div>

                @*NAV TOGGLER*@
                <button class="navbar-toggler justify-content-center w-100 my-2 border-2" type="button" data-bs-toggle="collapse" data-bs-target="#dbTogglerContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @*NAV TABS*@
                <div class="navbar-collapse w-75 collapse d-none d-sm-inline-flex justify-content-around">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="link-white mx-3 px-3 py-1 border-1 rounded" asp-area="" asp-controller="Home" asp-action="Index"><b>HOME</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="link-white mx-3 px-3 py-1 border-1 rounded" asp-area="" asp-controller="Home" asp-action="About"><b>ABOUT</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="link-black  mx-3 px-3 py-1 border-1 rounded" asp-area="" asp-controller="Home" asp-action="Menu"><b>MENU</b></a>
                        </li>
                    </ul>
                </div>

                @*NAV SEARCH BAR*@
                <div class="d-flex mx-3 w-50 collapse d-none d-sm-inline-flex justify-content-center ">
                    <form class="w-75" role="search">
                        <input class="form-control w-100 d-none d-lg-block" type="search" placeholder="Search" aria-label="Search">
                    </form>
                </div>

                @*NAV ICONS*@
                <div class="d-flex mx-3 w-25 collapse d-none d-sm-inline-flex justify-content-center">
                    <a class="navbar-collapse collapse" asp-area="" asp-controller="Home" asp-action="Menu"><img class="w-30 m-auto" src="~/assets/iconprof.png" /></a>
                </div>
            </div>

            @*NAV TOGGLER CONTENT*@
            <div class="collapse align-self-auto d-sm-none d-md-none d-lg-none d-xl-none flex-column bg-brown text-center w-100" id="dbTogglerContent" data-bs-theme="dark">
                <ul class="navbar-nav">

                    <a class="font_eggshell link_eggshell" asp-area=" " asp-controller="Home" asp-action="Index">
                    <li class="nav-item py-2">
                        <span class=" mx-4 px-3 py-1 border-1 rounded"><b>HOME</b></span>
                    </li>
                    </a>

                    <a class="font_eggshell link_eggshell" asp-area=" " asp-controller="Home" asp-action="About">
                    <li class="nav-item py-2">
                        <span class="mx-4 px-3 py-1 border-1 rounded"><b>ABOUT</b></span>
                    </li>
                    </a>

                    <a class="font_eggshell link_eggshell" asp-area="" asp-controller="Home" asp-action="Menu">
                    <li class="nav-item py-2">
                        <span class=" mx-4 px-3 py-1 border-1 rounded"><b>MENU</b></span>
                    </li>
                    </a>
                </ul>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ThomasianOrglist - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
